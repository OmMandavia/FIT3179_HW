{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 785,
  "height": 385,
  "title": "World Total Export Value (in US$ Millions) over 2001-2019",
  "data": {
    "url": "https://raw.githubusercontent.com/OmMandavia/FIT3179_HW/main/GlobalExportsTemporal.csv"
  },
  "params": [
    {
      "name": "Year_Above",
      "value": 2001,
      "bind": {
        "input": "range",
        "min": 2001,
        "max": 2019,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "transform": [{"filter": "year(datum.Year) >= Year_Above"}],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": {"grid": false, "ticks": false, "domainColor": "white"}
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Value (In US$ Millions)",
      "axis": {
        "tickCount": 5,
        "grid": false,
        "ticks": false,
        "domainColor": "white"
      }
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "scale": {"domain": ["World"], "range": ["#5e3c99"]}
    },
    "opacity": {"value": 0.88},
    "tooltip": [
      {
        "field": "Value",
        "type": "quantitative",
        "title": "Export Value (In US$ Millions)",
        "format": ","
      },
      {"field": "Year", "type": "temporal"}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 1.5,
        "strokeCap": "round"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": {"field": "Year", "type": "temporal"},
        "color": {"value": "#828282"},
        "opacity": {
          "condition": {
            "test": "year(datum['Year']) == '2008' || year(datum['Year']) == '2018' ",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "Value",
            "type": "quantitative",
            "title": "Export Value (In US$ Millions)",
            "format": ","
          },
          {"field": "Year", "type": "temporal"}
        ]
      }
    }
  ],
  "config": {"view": {"stroke": "transparent"}}
}
